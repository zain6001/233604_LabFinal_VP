<Window x:Class="Question1_WPF.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Question1_WPF"
        mc:Ignorable="d"
        Title="User" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Your Marks"/>
            <TextBox Name="Score" Text="0" />
            <ComboBox Name="difficultyComboBox" Width="150" Height="20" Margin="0 20 0 20 " VerticalAlignment="Center" HorizontalAlignment="Center" SelectionChanged="difficultyComboBox_SelectionChanged_1">
                <ComboBoxItem>Easy</ComboBoxItem>
                <ComboBoxItem>Medium</ComboBoxItem>
                <ComboBoxItem>Hard</ComboBoxItem>
            </ComboBox>
            <DataGrid Name="QuestionDataGrid" Height="158"/>
            <Label Content="Enter Id of Q.NO  "/>
            <TextBox Name="qIdTextBox"/>
            <Label Content="Enter Answer  "/>
            <TextBox Name="answerTextBox"/>
            <Button  Background="LightBlue"  Name="SaveQuestion"  Margin="0 20 0 0" Content="Submit Question" Click="SaveQuestion_Click"  />

            <Button  Background="LightBlue"  Name="QuitQuiz" Content="Quit Quiz" Margin="0 20 0 0" Click="QuitQuiz_Click"  />




        </StackPanel>

    </Grid>
</Window>
